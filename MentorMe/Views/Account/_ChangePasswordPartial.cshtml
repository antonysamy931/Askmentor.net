@model MentorMe.Models.LocalPasswordModel

<script type="text/javascript">
    $(document).ready(function () {
        $('input[type=button]').click(function () {            
            $('input[type=password]').val('');
        });
    });
</script>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
<div class="row">
    <div class="form-horizontal">
    <fieldset>
        <legend>Change Password</legend>
        <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-md-4 col-xs-4" })
            <div class="col-md-5 col-xs-8">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-md-4 col-xs-4" })
            <div class="col-md-5 col-xs-8">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-4 col-xs-4" })
            <div class="col-md-5 col-xs-8">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="Grade" class="control-label col-md-4 col-xs-4"></label>
            <div class="col-md-5 col-xs-8">
                <input type="submit" value="Change Password" class="btn btn-lg btn-primary" />
                <input type="button" value="Clear" class="btn btn-lg btn-primary" />
            </div>
        </div>
    </fieldset>
    </div>
</div>
}
