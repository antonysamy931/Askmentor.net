@model MentorMe.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


<h2 class="text-center">@ViewBag.Title</h2>

<iframe id="logoutframe" src="https://accounts.google.com/logout" style="display:none;"></iframe>
<iframe src="https://login.yahoo.com/config/login?logout=1" style="display:none;"></iframe>

<section id="loginForm">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="row">
        <div class="form-horizontal">
    <fieldset>
        <legend>Use a local account to log in</legend>
        <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-4 col-xs-4" })
            <div class="col-md-5 col-xs-8">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-4 col-xs-4" })
            <div class="col-md-5 col-xs-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <label for="Grade" class="control-label col-md-4 col-xs-4"></label>
            <div class="col-md-5 col-xs-8">
                <div class="row">
                    <div class="col-md-1 col-xs-2">
                        @Html.CheckBoxFor(m => m.RememberMe)
                    </div>
                    <div class="col-md-11 col-xs-10">
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </div>
                </div>                                
            </div>
        </div>
        <div class="form-group">
            <label for="Grade" class="control-label col-md-4 col-xs-4"></label>
            <div class="col-md-5 col-xs-8">
                <div class="row">
                    <div class="col-md-3 col-xs-5">
                        <input type="submit" value="Log in" class="btn btn-lg btn-primary" />
                    </div>
                    <div class="col-md-9 col-xs-6">
                        <h4>@Html.ActionLink("Register", "Register") if you don't have an account.</h4>
                    </div>
                </div>
                
            </div>
        </div>
    </fieldset>
  </div>
</div>
}
</section>

